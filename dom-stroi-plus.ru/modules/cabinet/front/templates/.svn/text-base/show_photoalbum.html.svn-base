<table width={if $total_photos==1}30{/if}{if $total_photos==2}60{/if}{if $total_photos>2}100{/if}% cellspacing=1 cellpadding=3>
<tr>
{assign var="i" value=0}
{foreach from=$photos_list item=photo name=tp}
