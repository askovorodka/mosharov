
{literal}
<SCRIPT language=JavaScript>
function confirm_delete(delete_id)
{
if (confirm("Дейтсвительно удалить этот узел?")) {
parent.location.href = "{/literal}{$base_url}/cabinet/photoalbum/delete/{literal}" + delete_id;
}
}
</SCRIPT>
{/literal}


[<a href={$module_url}/photoalbum/add>Добавить альбом</a>]
<br><br>


{if !$photoalbums_list}
<center>Нет ни одного альбома!</center>
{else}
<form action="" method=post>
<table width=100% bgcolor=#000000 cellpadding="5" cellspacing="1">
	<tr bgcolor=#cccccc>

		<td width=5%>
			Порядок
		</td>

		<td width=80%>
			Альбом
		</td>

		<td>
			Действия
		</td>

	</tr>

{foreach from=$photoalbums_list item=entry}
	<tr bgcolor=#ffffff>
		<td width=5%>
			<input type=text name=sort_order[{$entry.id}] value="{$entry.sort_order}">
		</td>
		<td>
			<b>{$entry.name}</b>
			{if $entry.description!=''}
			<br>
			{$entry.description}
			{/if}
		</td>

		<td align=center nowrap>
			[<a href={$base_url}/cabinet/photoalbum/edit/{$entry.id}/>редактировать</a>] [<a href="javascript: confirm_delete('{$entry.id}')">удалить</a>]
		</td>
	</tr>
{/foreach}
	<tr bgcolor=#ffffff>
		<td colspan=3 align=center>
			<input type=submit name=submit_edit_albums value="Сохранить изменения">
		</td>
	</tr>
</table>
</form>
{/if}

<br><br>
[<a href={$module_url}/photoalbum/add/>Добавить альбом</a>]