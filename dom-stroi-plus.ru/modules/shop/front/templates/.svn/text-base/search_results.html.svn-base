<form action="" method="POST" id="form_order_products">
		<table width="100%" border="0" cellspacing="1" cellpadding="0">
              <tr bgcolor="#fbf3df">
                <td colspan="8" class="tabletop"><div class="tabletop2">Для сортировки товара кликните по названию столбцов</div></td>
              </tr>

              <tr bgcolor="#fbf3df" class="tablecapt">
              	<td>&nbsp;</td>
                <td nowrap>
                <a href="{$base_url}/{$current_url}&sort=manufacturer&order={if empty($order) || $order == 'desc'}asc{else}desc{/if}">Производитель</a>
                {if $sort == "manufacturer"}{if $order == "asc"}&uarr;{else}&darr;{/if}{/if}
                </td>

                <td nowrap>
                <a href="{$base_url}/{$current_url}&sort=model&order={if empty($order) || $order == 'desc'}asc{else}desc{/if}">Модель</a>
                {if $sort == "model"}{if $order == "asc"}&uarr;{else}&darr;{/if}{/if}
                </td>
              
                <td nowrap>
                <a href="{$base_url}/{$current_url}&sort=name&order={if empty($order) || $order == 'desc'}asc{else}desc{/if}">Наименование</a>
                {if $sort == "name"}{if $order == "asc"}&uarr;{else}&darr;{/if}{/if}
                </td>
                
                <td nowrap>
                <a href="{$base_url}/{$current_url}&sort=article&order={if empty($order) || $order == 'desc'}asc{else}desc{/if}">Артикул</a>
                {if $sort == "article"}{if $order == "asc"}&uarr;{else}&darr;{/if}{/if}
                </td>
                
                <td nowrap>
                <a href="{$base_url}/{$current_url}&sort=price&order={if empty($order) || $order == 'desc'}asc{else}desc{/if}">Цена</a>
                {if $sort == "price"}{if $order == "asc"}&uarr;{else}&darr;{/if}{/if}
                </td>
                
                <td>Кол-во</td>
                <td>В корзину</td>
              </tr>
              {foreach from=$search_results item=product name=product}
              <tr bgcolor="#{if $smarty.foreach.product.iteration%2}f1f6f9{else}fbf3df{/if}" class="tableall">
              	<td><a href="{$base_url}/shop{$product.full_url}" class="CatalogImages" {if $product.image}image="/uploaded_files/shop_images/{$product.image}"{/if}><img src="{$template_image}photo.png"></a></td>
                <td>{$product.manufacturer.name}</td>
                <td><span class="tableart"><a href="{$base_url}/shop{$product.full_url}">{$product.model.name}</a></span></td>
                <td>{$product.name}</td>
                <td>{$product.article}</td>
                <td id="nw">{$product.price|format_number} <span class="tableart">руб.</span></td>
                <td><input type="text" class="tableinp" name="{$product.id}" value="1"></td>
                {if ($product.disk_width > 0 && $product.disk_sklad > 0) ||  ($product.tire_width > 0 && $product.tire_sklad > 0)}
                	<td><input type="image" name="add_order" src="{$template_image}buy.png" width="57" height="17"></td>
                {else}
                	<td id="noway">Нет в<br>наличии</td>
                {/if}
              </tr>
              {/foreach}
              <tr bgcolor="#fbf3df">
                <td colspan="9" class="tablebot"><div class="tablebot2"></div></td>
              </tr>
            </table>
</form>