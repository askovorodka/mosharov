{foreach from=$news_list_support item=news name=nw}
{if $smarty.foreach.nw.iteration<5}
<tr valign="top"><td colspan="2" style="padding-top : 17px;"><h2>{$news.title}</h2></td></tr>
<tr valign="top"><td height="23" colspan="2"><h6>| 20.10.2007</h6></td></tr>
<tr valign="top">{if $news.image!=''}<td height="1"><img src="{$base_url}/uploaded_files/news/{$news.image}" style="margin-right : 11px;" /></td><td width="100%" height="1">{$news.small_text|strip_tags|truncate:200}</td>{else}<td height="1" colspan="2">{$news.small_text|strip_tags|truncate:200}</td>{/if}</tr>
<tr><td colspan="2" align="right" height="15"><a href="/news/archive/{$news.id}/">Подробнее</a></td></tr>
{/if}
{/foreach}